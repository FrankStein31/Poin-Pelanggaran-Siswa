<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="8dp"
    android:elevation="6dp"
    android:radius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Konten Kiri: Informasi Teks -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/tv_nama_siswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Siswa"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_nis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NIS: 123456"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tv_jurusan_kelas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jurusan: TKJ | Kelas: XII RPL"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tv_poin_pelanggaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Poin Pelanggaran: 100"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tv_tanggal_pelanggaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal: 12 Juni 2025"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tv_guru_piket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guru Piket: Ibu Ani"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Konten Kanan: Gambar Bukti -->
        <ImageView
            android:id="@+id/img_bukti_pelanggaran"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:contentDescription="Foto Bukti Pelanggaran"
            android:background="#E0E0E0"
            android:visibility="gone" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
