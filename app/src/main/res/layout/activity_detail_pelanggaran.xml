<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF8FBFF"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvJudulPelanggaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Daftar Pelanggaran"
        android:textColor="#333"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnCetakSP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Cetak Surat Peringatan"
        android:textStyle="bold"
        android:padding="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <Button
            android:id="@+id/btn_hubungi_siswa"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hubungi Siswa"
            app:icon="@android:drawable/ic_menu_call"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            tools:visibility="visible"/>

        <Button
            android:id="@+id/btn_hubungi_ortu"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hubungi Ortu"
            app:icon="@android:drawable/ic_menu_call"
            android:visibility="gone"
            tools:visibility="visible"/>
    </LinearLayout>


    <ListView
        android:id="@+id/listViewPelanggaran"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"/>

</LinearLayout>
