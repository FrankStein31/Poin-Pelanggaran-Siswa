<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8FBFF"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Judul -->
    <TextView
        android:id="@+id/tvJudulPelanggaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar Pelanggaran"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#333"
        android:layout_marginBottom="12dp"/>

    <!-- Tombol Cetak Surat Peringatan -->
    <Button
        android:id="@+id/btnCetakSP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cetak Surat Peringatan"
        android:background="#FF5722"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:padding="12dp"
        android:drawableLeft="@android:drawable/ic_menu_save"
        android:drawablePadding="8dp"/>

    <!-- ListView untuk menampilkan pelanggaran -->
    <ListView
        android:id="@+id/listViewPelanggaran"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"/>

</LinearLayout>